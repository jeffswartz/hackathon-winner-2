{{#if transaction}}
{{#if index}}
  <div class="row">
    <div class="col-xs-12">
      <div class="line"></div>
    </div>
  </div>
 {{/if}}
<div class="row transaction-data">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-2">
        {{transaction.date}}
      </div>
      <div class="col-xs-4 col-xs-offset-1">
        <div class="row">
          <div class="col-xs-12">
            {{transaction.subtext}}
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            {{transaction.info}}
          </div>
        </div>
      </div>
      <div class="col-xs-2">
        {{#if transaction.debt}}
        <span class="debt">${{transaction.amount}}</span>
        {{else}}
        <span class="credit">${{transaction.amount}}</span>
        {{/if}}
      </div>
      <div class="col-xs-2 col-xs-offset-1">
        <div class="pull-right">
          <strong>${{transaction.total}}</strong>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}